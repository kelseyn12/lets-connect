rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Waiting words (per user)
    match /waitingWords/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Chat rooms (and their messages)
    match /chatRooms/{roomId} {
      allow read, write: if request.auth != null
        && (request.resource.data.users.hasAny([request.auth.uid])
          || resource.data.users.hasAny([request.auth.uid]));

      // âœ… Allow chat participants to read/write messages
      match /messages/{messageId} {
        allow read, write: if request.auth != null
          && (get(/databases/$(database)/documents/chatRooms/$(roomId)).data.users.hasAny([request.auth.uid]));
      }
    }

    // Development fallback
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

