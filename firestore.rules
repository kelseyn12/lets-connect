rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸŸ© waitingWords: each user only manages their own waiting doc
    match /waitingWords/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ðŸŸ¦ chatRooms: only matched participants can access
    match /chatRooms/{roomId} {
      allow read, write: if request.auth != null
        && (
          (request.resource.data.users.hasAny([request.auth.uid])) ||
          (resource.data.users.hasAny([request.auth.uid]))
        );

      // Messages subcollection (inherits room access)
      match /messages/{messageId} {
        allow read, write: if request.auth != null
          && (
            (request.resource.data.senderId == request.auth.uid) ||
            (resource.data.senderId == request.auth.uid) ||
            (get(/databases/$(database)/documents/chatRooms/$(roomId)).data.users.hasAny([request.auth.uid]))
          );
      }
    }
  }
}
