rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read/write their own waitingWords document
    match /waitingWords/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow chatRooms access only to matched users
    match /chatRooms/{roomId} {
      allow read, write: if request.auth != null
        && (request.resource.data.users.hasAny([request.auth.uid])
          || resource.data.users.hasAny([request.auth.uid]));
    }

    // For development only: 
    // Allow reads to everything and writes from authenticated users
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
