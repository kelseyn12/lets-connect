// Firestore security rules for "Let's Connect"

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // waitingWords: only authenticated users can write their own entries
    match /waitingWords/{docId} {
      allow read: if true; // public (safe, minimal info)
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null
                    && resource.data.userId == request.auth.uid;
      allow update: if false; // no edits
    }

    // chatRooms: only participants can read/write messages
    match /chatRooms/{roomId} {
      allow read, write: if request.auth != null
                         && (request.auth.uid in resource.data.users);
      match /messages/{messageId} {
        allow read, write: if request.auth != null
                           && (request.auth.uid in resource.data.users);
      }
    }
  }
}
